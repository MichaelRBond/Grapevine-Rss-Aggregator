{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es6", "es2016.array.include"],
      "types": ["@types/jest", "node"],
      "baseUrl": "src/types",
      "resolveJsonModule": true,
      "sourceMap": true,
      "allowJs": true,
      "checkJs": false,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "alwaysStrict": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": ".build",
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ],
      "plugins": [
        { "name": "tslint-language-service" }
      ],
      "rootDir": "."
    },
    "include" : [
      "src/**/*",
      "test/**/*"
    ],
    "exclude": [
      ".build",
      "node_modules",
      "!node_modules/@types",
      "src/types"
    ]
  }
